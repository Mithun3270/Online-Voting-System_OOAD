<%- include('partials/header', { title: 'Online Voting', user: user }) %>

<div class="front-hero d-flex align-items-center justify-content-center">
  <div class="front-card card p-4 text-center">
    <div class="row g-0 align-items-center">
      <div class="col-md-6 text-center d-none d-md-block">
        <img src="/images/voter-image.jpg" alt="Voter" class="img-fluid rounded" style="max-height:320px; object-fit:cover;">
      </div>
      <div class="col-md-6">
        <h1 class="mb-2" style="font-weight:800;letter-spacing:0.2px">Online Voting System</h1>
        <p class="small-muted mb-3">Login or register to participate in the scheduled election.</p>
        <form method="post" action="/login" class="text-start">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input name="username" class="form-control" placeholder="Enter username" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter password" required>
          </div>
          <div class="d-flex gap-2">
            <button class="btn btn-primary">Login</button>
            <a href="/register" class="btn btn-outline-secondary">Register</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
