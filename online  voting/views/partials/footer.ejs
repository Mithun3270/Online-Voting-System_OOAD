  <script>
    // Theme toggle - persists to localStorage
    (function(){
      const key = 'voting_theme';
      function applyTheme(t){
        if(t === 'dark') document.documentElement.classList.add('theme-dark');
        else document.documentElement.classList.remove('theme-dark');
        const ic = document.getElementById('themeIcon');
        if(ic) ic.className = t === 'dark' ? 'bi bi-sun-fill' : 'bi bi-moon-fill';
      }
      const saved = localStorage.getItem(key) || 'light';
      applyTheme(saved);
      const btn = document.getElementById('themeToggle');
      if(btn){ btn.addEventListener('click', ()=>{ const cur = document.documentElement.classList.contains('theme-dark') ? 'dark' : 'light'; const next = cur === 'dark' ? 'light' : 'dark'; localStorage.setItem(key, next); applyTheme(next); }); }
    })();
