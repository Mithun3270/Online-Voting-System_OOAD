<%- include('partials/header', { title: 'Edit Candidate', user: user }) %>

<div class="d-flex justify-content-center py-5">
  <div class="w-50">
    <h4>Edit Candidate</h4>
    <form method="post" action="/admin/candidates/<%= candidate._id %>/edit">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input name="name" class="form-control" required value="<%= candidate.name %>">
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-primary">Save</button>
        <a href="/admin" class="btn btn-outline-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
